<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sessionCreateCardView"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="@dimen/card_margin"
    android:elevation="@dimen/card_elevation"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="@dimen/element_padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/sessionListItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/session_name"
            android:textScaleX = "1.5"
            android:fontFamily="@font/lato"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            app:layout_constraintBottom_toTopOf="@+id/sessionListItemCreatedBy"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sessionListItemCreatedBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created by Perul"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textScaleX = "1.5"
            android:fontFamily="@font/lato"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sessionListItemName" />

        <TextView
            android:id="@+id/sessionListItemCreatedOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="On 23 May 2019"
            android:textScaleX = "1.5"
            android:fontFamily="@font/lato"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sessionListItemCreatedBy" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
